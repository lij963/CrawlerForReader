<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.qy.reader.common.widgets.reader.ReadView
        android:id="@+id/read_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/rl_book_read_top"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorReadBar"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_read_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:drawableLeft="@drawable/ic_common_back_white"
            android:drawablePadding="@dimen/app_spacing_2"
            android:gravity="center"
            android:padding="@dimen/app_spacing_1"
            android:textColor="@android:color/white" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_book_read_bottom"
        style="@style/VerticalLayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:background="@color/colorReadBar"
        android:orientation="vertical">

    </LinearLayout>

</RelativeLayout>